
<!-- Start About -->
<div class="row-fluid section" id="blog">
	<div class="container"> 

		<div class="explain">

			<h2>ABOUT</h2>

			<!-- Start Team Members -->

			<div class="row-fluid">

				<div class="span12 blog_entry">

					<% @blogs.each do |blog| %>
					<h2><%= blog.title %></h2>
					<div class="article-body">					
						<%= truncate_html blog.body, :length => 1000 %>		
					</div>
					<%= link_to "Read More", { :action => "show" , :id => blog.id} , :class => "m-btn blue" %>
					<% end %>														
					<div class="pagination">
						<ul>
							<% if @current_page < @page && @current_page >= 1 %>
							<li><%= link_to "Prev", :action => "index", :page => "#{@current_page - 1}" %></li>
							<% end %>
							<% @page.times do |p| %>          
							<li><%= link_to "#{p+1}", :action => "index", :page => "#{p+1}" %></li>
							<% end %>

							<% if @current_page < @page && @current_page >= 1 %>
							<li><%= link_to "Prev", :action => "index", :page => "#{@current_page - 1}" %></li>
							<% end %>

						</ul>
					</div>     				</div> 
				</div>
			</div>
		</div>

		<!-- FOOTER -->
		<div class="row-fluid">

			<div class="container footer">

