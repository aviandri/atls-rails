
<div class="row-fluid">
  <div class="container">              
    <div id="register-form" class="span10">  
      <ul class="breadcrumb">
        <li class="active">Bio Data<span class="divider">></span></li>
        <li><a href="#">Data Kantor Kampus</a> <span class="divider">></span></li>
        <li><a href="#">Data</a></li>
      </ul>
        <%= form_for @attendee do|f| %>
        <fieldset>
          <legend>Biodata</legend>

            <%= f.label :name, "Nama Lengkap" %>
            <%= f.text_field :name%>
            <%= f.label :date_of_birth, "Tanggal Lahir" %>
            <%= f.text_field :date_of_birth%>
            <label>Tempat lahir</label>
            <input type="text" placeholder="Jakarta">
            <%= f.label :gender, "Jenis Kelamin" %>
            <label class="radio inline">
            <%= f.radio_button :gender, "male" %>
                Pria
            </label>
            <label class="radio inline">
              <%= f.radio_button :gender, "female" %>
                Wanita
            </label>
            <%= f.label :religion, "Agama", :style => "margin-top:5px;" %>
            <label class="radio inline">
            <%= f.radio_button :religion, "islam" %>
                Islam
            </label>
            <label class="radio inline">
              <%= f.radio_button :religion, "kristen" %>
                Kristen
            </label>
            <label class="radio inline">
              <%= f.radio_button :religion, "hindu" %>
                Hindu
            </label>
            <label class="radio inline">
              <%= f.radio_button :religion, "budha" %>
                Budha
            </label>

          
          <legend>Alamat</legend>
          <%= f.label :address, "Alamat", :style => "margin-top :5px;" %>
          <%= f.text_field :address, :class => "span8" , :placeholder => "Jl. Setra duta raya E1-18" %>
          
          <%= f.label :phone, "Telepon" %>
          <%= f.text_field :address, :class => "span4" , :placeholder => "021-200000 atau 0821111111" %>
          <%= f.label :email, "Email"%>
          <%= f.text_field :email, :class => "span4" , :placeholder => "johndoe@gmail.com" %>

          <legend>Data Kantor</legend>
          <%= f.label :office_name, "Nama Kantor"%>
          <%= f.text_field :office_name, :class => "span4" , :placeholder => "Departemen Kesehatan" %>
          <%= f.label :office_address, "Alamat Kantor"%>
          <%= f.text_field :office_address, :class => "span8" , :placeholder => "Jalan Kesehatan No.11" %>
          <%= f.label :office_phone, "Telepon Kantor"%>
          <%= f.text_field :office_phone, :class => "span4" , :placeholder => "021-200000 atau 0821111111" %>
          <%= f.label :job_title, "Jabatan"%>
          <%= f.text_field :job_title, :class => "span4" , :placeholder => "Dokter Umum" %>

          <legend>Data Kampus</legend>
          <%= f.label :campus_name, "Nama Kampus"%>
          <%= f.text_field :campus_name, :class => "span4" , :placeholder => "Departemen Kesehatan" %>
          <%= f.label :campus_address, "Alamat Kampus"%>
          <%= f.text_field :campus_address, :class => "span8" , :placeholder => "Jalan Kesehatan No.11" %>
          <%= f.label :campus_phone, "Telepon Kampus"%>
          <%= f.text_field :campus_phone, :class => "span4" , :placeholder => "021-200000 atau 0821111111" %>
          <legend>Lokasi Training</legend>
          <%= f.label :position, "Pilih Lokasi Training"%>
          <%= f.select :training_location, options_for_select([["Jakarta", "jakarta"], ["Pekan Baru", "pekan_baru"], ["Riau", "riau"]]) %>
          <%= f.submit %>
        </fieldset>
        <% end %>


        <div class="span10 pagination-centered">
         <button class="btn btn-large btn-primary pull-center" type="button">Lanjut></button>                   
       </div>
     </form>

   </div>        
 </div>
</div>

