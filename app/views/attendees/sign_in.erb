
<div class="row-fluid callout">
  <!-- Start Carousel -->
  <div class="container-fluid">
    <div id="register-form" class="span6">        
      <fieldset>
        <legend style = "margin-bottom:20px;">Login</legend>
        <%= form_for(@attendee, :url => attendee_session_path) do |f| %>
        <div class="control-group">
          <div class="control">
            <%= f.email_field :email, :placeholder=>"Enter your e-mail address", :class => "span8 offset2 field" %>                  
          </div>
        </div>

        <div class="control-group">
          <div class="control">    
            <%= f.password_field :password, :placeholder => "Enter your password", :class => "span8 offset2 field" %>              
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <label class="checkbox span4 offset7">
              <input type="checkbox"> Remember me
            </label>
            <button type="submit" class="btn btn-primary span3 offset4">Sign in</button>
          </div>
        </div>    
        <% end %>            
      </fieldset>
      <div class="row">
        <span class="span9 offset2">Belum punya account? <a href="http://google.com">Sign up</a> terlebih dahulu</span>
      </div>
      
    </div>


  </div>
</div>

