
<div class="row-fluid">
  <!-- Start Carousel -->
  <div class="container body">
    <div id="register-form" class="span6 offset3">        
      <fieldset>
        <legend>Login</legend>
        <div id="register-form-input" class="span12">
          <%= form_for(@attendee, :url => attendee_session_path) do |f| %>
          <div class="control-group">
            <div class="control">
              <%= f.email_field :email, :placeholder=>"Enter your e-mail address", :class => "field" %>                  
            </div>
          </div>

          <div class="control-group">
            <div class="control">    
              <%= f.password_field :password, :placeholder => "Enter your password", :class => "field" %>              
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <label class="checkbox span4">
                <input type="checkbox"> Remember me
              </label>
              <button type="submit" class="offset5 m-btn blue">Sign in</button>
            </div>
            <div>
              <span class="span4">
                  <%= render "devise/shared/links" %>
              <span>
            </div>
          </div>    
          <% end %>   
        </div>         
      </fieldset>
      <div class="row">
          <span class="span9 offset2">Belum punya account? <%= link_to "Sign up", new_attendee_registration_path %></a> terlebih dahulu</span>
      </div>

      
    </div>


  </div>
</div>

