	  			<ul class="inline">
				  <li><span>Alamat</label></li>
				  <li>:</li>
				  <li><span><%= @order.attendees[0].address %></label></li>
				</ul>
				<ul class="inline">
				  <li><span>Telepon</label></li>
				  <li>:</li>
				  <li><span><%= @order.attendees[0].phone %></span></li>
				</ul>
				<ul class="inline">
				  <li><span>Email</label></li>
				  <li>:</li>
				  <li><span><%= @order.attendees[0].email %></span></li>
				</ul>
	  		</fieldset>

	  		<fieldset>  				
	  			<legend>Lokasi Training</legend>
	  			<ul class="inline">
