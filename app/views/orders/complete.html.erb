				  <li><span>Jenis Kelamin</label></li>
				  <li>:</li>
				  <li><span><%= @order.attendees[0].gender %></label></li>
				</ul>
				<ul class="inline">
				  <li><span>Agama</label></li>
				  <li>:</li>
				  <li><span><%= @order.attendees[0].religion %></label></li>
				</ul>		
