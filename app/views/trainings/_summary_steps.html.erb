<div class="heading">				
	<h1 class="heading-title">Ringkasan</h1>
	<div class="clearfix"></div>
</div>
<div class="border-bottom"></div>
<div>
	<table class="table">
		<thead>
			<tr>								
				<th colspan="2">Barang</th>
				<th>Biaya</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td colspan="2"><%= @training.description %></td>												
				<td>Rp.<span class="pull-right"><%= number_to_currency_rupiah(@training.price) %> ,-</span></td>
			</tr>
			<tr>
				<td colspan="2">Kode pembayaran</td>						
				<td>Rp.<span class="pull-right"><%= number_to_currency_rupiah(@training.payment_code) %>,-</span></td>
			</tr>
			<tr>
				<td></td>
				<td class="pull-right strong">Total</td>						
				<td>Rp.<span class="pull-right strong"><%= number_to_currency_rupiah(@training.total_price)%>,-</span></td>
			</tr>					
		</tbody>
	</table>
	<div class="section">
		<label>Detail pembayaran</label>
		<p class="strong">Transfer Bank <%= "#{@training.payment_type.name}" %>  </p>
    	<p>No Rekening <%= "#{@training.payment_type.account_number}" %></p>
    	<p>Atas Nama <%= "#{@training.payment_type.account_holder}" %></p>
		<p>Cabang <%= "#{@training.payment_type.branch_name}" %></p>
	</div>

	<% content_for :action_button do %>
		<button type="submit" name="back_button" class="m-btn red span3" type="button">&lt Kembali</button>                   
	  	<button type="submit" class="m-btn blue span3" type="button">Lanjut &gt</button>                   
	<% end %>
</div>

