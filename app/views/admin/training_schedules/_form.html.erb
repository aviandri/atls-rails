
<%= semantic_form_for [:admin, @jadwal_training], :url => url_for(:controller => "admin/jadwal_trainings", :action => params[:action].start_with?("new", "create")  ? "create" : "update") do |f| %>
	<%= f.inputs "Jadwal Training" do %>     
			 <%= f.input :training_location, :as => :select, :collecection => TrainingLocation.all %>	 
			 <%= f.input :training_date, :as => :string %>
             <%= f.input :quota %>			 
	<% end %>
<% end %>

<script type="text/javascript">
	$(document).ready(function(){
		defaultDate = new Date("January 1, 2013");
		$("#training_schedule_training_date").datepicker({dateFormat: "dd-mm-yy", defaultDate: defaultDate})
	});
</script>
